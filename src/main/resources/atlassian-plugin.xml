<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    <param name="plugin-icon">images/pluginIcon.png</param>
    <param name="plugin-logo">images/pluginLogo.png</param>
  </plugin-info>
  <!-- add our i18n resource -->
  <resource type="i18n" name="i18n" location="issue-estimate-kpi"/>
  <!-- add our web resources -->
  <web-resource key="issue-estimate-kpi-resources" name="issue-estimate-kpi Web Resources">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <dependency>com.atlassian.auiplugin:table</dependency>
    <resource type="download" name="batch.css" location="/css/batch.css"/>
    <resource type="download" name="issue-estimate-kpi.css" location="/css/issue-estimate-kpi.css"/>
    <resource type="download" name="issue-estimate-kpi.js" location="/js/issue-estimate-kpi.js"/>
    <resource type="download" name="issue-estimate-page.js" location="/js/issue-estimate-page.js"/>
    <resource type="download" name="images/" location="/images"/>
    <context>issue-estimate-kpi</context>
  </web-resource>
  <web-resource key="issue-estimate-kpi-icon-resources" name="issue-estimate-kpi icon Web Resources">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <dependency>com.atlassian.auiplugin:aui-experimental-iconfont</dependency>
    <resource type="download" name="issue-estimate-kpi-icon.css" location="/css/issue-estimate-kpi-icon.css"/>
    <resource type="download" name="issue-estimate-kpi-icon.js" location="/js/issue-estimate-kpi-icon.js"/>
    <context>issue-estimate-kpi</context>
  </web-resource>
  <webwork1 key="issue-estimate-kpi-module" name="IssueEstimateKpiModule" i18n-name-key="issue-estimate-kpi-module.name">
    <description key="issue-estimate-kpi-module.description">The IssueEstimateKpiModule Plugin</description>
    <actions>
      <action name="com.cbis.jira.webwork.IssueEstimateKpiAction" alias="IssueEstimateKpiAction">
        <view name="issue-success">/templates/issue-estimate-kpi-module/issueestimatekpiaction/issue-success.vm</view>
      </action>
    </actions>
  </webwork1>
  <web-section name="Issue Estimate Kpi Section" i18n-name-key="issue-estimate-kpi-section.name" key="issue-estimate-kpi-section"
               location="admin_plugins_menu" weight="1000">
    <description key="issue-estimate-kpi-section.description">The Issue Estimate Kpi Section Plugin</description>
    <label key="issue-estimate-kpi-section.label"/>
  </web-section>
  <web-item name="Issue Estimate Kpi Item" i18n-name-key="issue-estimate-kpi-item.name" key="issue-estimate-kpi-item"
            section="admin_plugins_menu/issue-estimate-kpi-section" weight="1000">
    <description key="issue-estimate-kpi-item.description">The Issue Estimate Kpi Item Plugin</description>
    <label key="issue-estimate-kpi-item.label"></label>
    <link linkId="issue-estimate-kpi-item-link">/secure/IssueEstimateKpiAction.jspa?startAt=0&amp;currentPage=1</link>
  </web-item>
</atlassian-plugin>
